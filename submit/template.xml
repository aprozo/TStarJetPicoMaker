<?xml version="1.0" encoding="utf-8" ?>

<job name="pp2012_embed" fileListSyntax="paths" maxFilesPerProcess="1" simulateSubmission="false">

  <stdout URL="file:&jobFolder;/log/$JOBID.out"/>
  <stderr URL="file:&jobFolder;/err/$JOBID.err"/>

  <input URL="filelist:&baseFolder;/lists/list_of_lists.list" nFiles="all"/>

  <Generator>
    <Location>./report/</Location>
    <ScriptLocation>./csh/</ScriptLocation>
    <ListLocation>./list/</ListLocation>
  </Generator>

  <command>
    starver &starVersion;
    ls -ltrh **
    root4star -l -b -q &rootMacro;\(\"/gpfs01/star/pwg/prozorov/TStarJetPicoMaker/lists/$FILEBASENAME.list\",\"$FILEBASENAME\"\) &gt;&amp; ${JOBID}.log
  </command>

  <output fromScratch="*.root" toURL="&jobFolder;/production/" />
  <output fromScratch="*.log" toURL="&jobFolder;/log/" />


  <SandBox installer="ZIP">
    <Package name="LocalLibraries">
      <File>file:&baseFolder;/libs/</File>
      <File>file:&baseFolder;/macros/&rootMacro;</File>
    </Package>
  </SandBox>
</job>

